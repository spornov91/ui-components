                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/activity5SplitterGray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgProfile4"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/profiile_pic" />

                    <TextView
                        android:id="@+id/textDescription4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/imgProfile4"
                        android:layout_toRightOf="@+id/imgProfile4"
                        android:text="test" />

                    <LinearLayout
                        android:id="@+id/listFriends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textDescription4"
                        android:layout_toEndOf="@+id/imgProfile4"
                        android:layout_toRightOf="@+id/imgProfile4"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingStart="16dp">

                        <ImageView
                            android:id="@+id/friend1"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/profiile_pic" />

                        <ImageView
                            android:id="@+id/friend2"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/profiile_pic" />

                        <ImageView
                            android:id="@+id/friend3"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/profiile_pic" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/listFriends"
                        android:layout_toEndOf="@+id/imgProfile4"
                        android:layout_toRightOf="@+id/imgProfile4"
