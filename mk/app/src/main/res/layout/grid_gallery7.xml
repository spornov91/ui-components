<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="0dp">

        <com.mediatechindo.wahyu.materialuikit.tools.SquareRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/loginsignup23_bg" />

            <LinearLayout
                android:id="@+id/lastItemCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:gravity="center_horizontal"
                    android:text="136"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="more" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/itemCheckIndicator"
                android:background="@color/gallery7indicatorSelectedBg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/gallery6checkIndicator"
                    app:cardCornerRadius="24dp">

                    <ImageView
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_check_white" />

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </com.mediatechindo.wahyu.materialuikit.tools.SquareRelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>