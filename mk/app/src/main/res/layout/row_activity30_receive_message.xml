<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/receiveLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/leftArrow"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:background="@drawable/activity24_chat_shape2"
            android:elevation="2dp"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_toEndOf="@+id/leftArrow"
            android:background="@drawable/activity24_chat_shape1"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/receiveMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp" />

            <TextView
                android:id="@+id/receiveTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="4dp"
                android:gravity="right"
                android:textColor="@color/activity8fontGray"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>