<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="74dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="84dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_above="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagePage1"
                    android:src="@drawable/headphone_red"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="96dp"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/description"
                android:gravity="center_horizontal"
                android:text="Overview"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_above="@+id/indicatorContainer"
                android:paddingLeft="46dp"
                android:paddingRight="46dp"
                android:paddingBottom="28dp"
                android:paddingTop="8dp"
                android:text="Making friends is easy as waving your hand back and forth."
                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/indicatorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnGetStarted"
                android:layout_marginBottom="8dp"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:id="@+id/indicator1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_dot_grey" />

                <View
                    android:id="@+id/indicator2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_dot_grey" />

                <View
                    android:id="@+id/indicator3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_dot" />

                <View
                    android:id="@+id/indicator4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/ic_dot_grey" />
            </LinearLayout>

            <Button
                android:id="@+id/btnGetStarted"
                style="@style/ButtonMagenta"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="38dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="GET STARTED"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
