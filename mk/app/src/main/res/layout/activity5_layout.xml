                        android:layout_below="@+id/textDescription7"
                        android:layout_toEndOf="@+id/imgProfile7"
                        android:layout_toRightOf="@+id/imgProfile7"
                        android:text="An hour ago"
                        android:textColor="@color/activity5fontGray"
                        android:textSize="11sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/activity5SplitterGray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgProfile8"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/profiile_pic" />

                    <TextView
                        android:id="@+id/textDescription8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/imgProfile8"
                        android:layout_toRightOf="@+id/imgProfile8"
                        android:text="test" />

                    <TextView
                        android:layout_width="wrap_content"
