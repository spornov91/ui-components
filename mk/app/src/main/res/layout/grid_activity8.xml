<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:minHeight="120dp"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/profiile_pic" />

                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="Tony Ramirez" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:drawableLeft="@mipmap/ic_clock_small"
                        android:drawablePadding="4dp"
                        android:text="An hour ago"
                        android:textColor="@color/activity8fontGray"
                        android:textSize="11sp" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="28dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    android:layout_height="28dp">

                    <ImageView
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@mipmap/ic_love_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="28dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    android:layout_height="28dp">

                    <ImageView
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@mipmap/ic_viewer_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>