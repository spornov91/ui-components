<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <View
        android:id="@+id/barNotificationActive"
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/menuNavigation8menuNotificationBg"
        android:visibility="visible" />

    <TextView
        android:id="@+id/menuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/barNotificationActive"
        android:padding="18dp"
        android:textSize="16sp"
        tools:text="Explore" />

    <TextView
        android:id="@+id/menuNotificationNonActiveCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/menunavigation8_notification_nonactive_bg"
        android:gravity="center_horizontal|center_vertical"
        android:minHeight="22dp"
        android:minWidth="22dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/menuNotificationCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/menunavigation8_notification_bg"
        android:gravity="center_horizontal|center_vertical"
        android:minHeight="22dp"
        android:minWidth="22dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>