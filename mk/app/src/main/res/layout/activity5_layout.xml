                        android:layout_below="@+id/textDescription8"
                        android:layout_toEndOf="@+id/imgProfile8"
                        android:layout_toRightOf="@+id/imgProfile8"
                        android:text="An hour ago"
                        android:textColor="@color/activity5fontGray"
                        android:textSize="11sp" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_loginsignup" />

</android.support.v4.widget.DrawerLayout>
